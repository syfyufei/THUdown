@article{Alford2014,
  title = {The Multiple Facets of Co-Production: Building on the Work of Elinor Ostrom},
  shorttitle = {The Multiple Facets of Co-Production},
  author = {Alford, John},
  year = {2014},
  month = apr,
  journal = {Public Management Review},
  volume = {16},
  doi = {10.1080/14719037.2013.806578},
  abstract = {This article revisits Elinor Ostrom's pioneering formulation more than three decades ago of the notion of co-production, which remains foundational, but closer scrutiny reveals further unexplored potential. This article focuses on the two parts of the term `co-production', namely, its `production', aspect with its sense of a process of turning inputs into products, and its `co' aspect, with its sense of some kind of relationship. Both aspects have multiple facets, which are in some respects at odds and in others congruent with each other. The article canvasses ways of combining, trading off, and/or choosing between them.}
}

@article{AmorimLopesAlves2020,
  title = {Coproduction and Cocreation in Public Care Services: A Systematic Review},
